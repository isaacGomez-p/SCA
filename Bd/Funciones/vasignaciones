CREATE OR REPLACE FUNCTION tienda.f_verasignaciones(
	_id integer)
    RETURNS SETOF tienda.v_asignaciones 
    LANGUAGE 'plpgsql'

    COST 100
    VOLATILE 
    ROWS 1000
AS $BODY$

BEGIN
RETURN QUERY

SELECT idasignaciones, 
referencia, 
talla, 
cantidad, 
idasignacion
FROM tienda.asignaciones
WHERE idasignacion = _id;

END;

$BODY$;